{
  "name": "@xrpl-connect/ui",
  "version": "0.4.0",
  "description": "Web component UI for XRPL Connect wallet connections",
  "author": "XRPL Connect Contributors",
  "license": "MIT",
  "homepage": "https://github.com/XRPL-Commons/xrpl-connect#readme",
