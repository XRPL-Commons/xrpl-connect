{
  "name": "xrpl-connect",
  "version": "0.4.0",
  "description": "The easiest way to connect XRPL wallets to your app - Framework-agnostic toolkit with plug-and-play UI",
  "author": "XRPL Connect Contributors",
  "license": "MIT",
  "homepage": "https://github.com/XRPL-Commons/xrpl-connect#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/XRPL-Commons/xrpl-connect.git"
  },
  "bugs": {
    "url": "https://github.com/XRPL-Commons/xrpl-connect/issues"
  },
  "keywords": [
    "xrpl",
    "wallet",
    "web3",
    "xaman",
    "crossmark",
    "gemwallet",
    "walletconnect",
    "ledger",
    "wallet-adapter",
    "wallet-connection",
    "web-component",
    "ui",
    "react",
    "vue",
    "vanilla-js"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "publish:build": "vite build -c vite.config.ts && node scripts/prepare-publish.js",
    "clean": "rm -rf dist dist-publish"
  },
  "dependencies": {
    "@xrpl-connect/adapter-crossmark": "workspace:*",
    "@xrpl-connect/adapter-gemwallet": "workspace:*",
    "@xrpl-connect/adapter-ledger": "workspace:*",
    "@xrpl-connect/adapter-walletconnect": "workspace:*",
    "@xrpl-connect/adapter-web3auth": "workspace:*",
    "@xrpl-connect/adapter-xaman": "workspace:*",
    "@xrpl-connect/core": "workspace:*",
    "@xrpl-connect/ui": "workspace:*"
  },
  "peerDependencies": {
    "xrpl": "^3.0.0 || ^4.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-inject": "^5.0.5",
    "@types/node": "^20.14.0",
    "buffer": "^6.0.3",
    "global": "^4.4.0",
    "process": "^0.11.10",
    "tsup": "^8.1.0",
    "typescript": "^5.5.0",
    "vite": "^5.0.0",
    "vite-plugin-node-polyfills": "^0.24.0"
  }
}
