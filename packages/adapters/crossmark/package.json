{
  "name": "@xrpl-connect/adapter-crossmark",
  "version": "0.1.0",
  "description": "Crossmark wallet adapter for XRPL Connect - Browser extension wallet support",
  "author": "XRPL Connect Contributors",
  "license": "MIT",
  "homepage": "https://github.com/your-org/xrpl-connect#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/xrpl-connect",
    "directory": "packages/adapters/crossmark"
  },
  "bugs": {
    "url": "https://github.com/your-org/xrpl-connect/issues"
  },
  "keywords": [
    "xrpl",
    "crossmark",
    "wallet",
    "adapter",
    "web3",
    "ripple",
    "browser-extension"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": ["dist", "README.md"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@xrpl-connect/core": "workspace:*",
    "@crossmarkio/sdk": "^0.4.0"
  },
  "peerDependencies": {
    "xrpl": "^3.0.0 || ^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "tsup": "^8.1.0",
    "typescript": "^5.5.0",
    "vitest": "^1.6.0"
  }
}
